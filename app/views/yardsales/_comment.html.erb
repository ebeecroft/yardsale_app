<% @user = User.find_by_id(comment.user_id) %>

<span class="description"><%= comment.comment %></span>
<span class="timestamp">Posted by <%= @user.name %> <%= time_ago_in_words(comment.created_at) %> ago.</span>

<% if current_user?(@yardsale.user) %> |
  <%= link_to "delete", yardsale_comment_path(@yardsale, comment), method: :delete, data: { confirm: "You sure?" } %>
<% end %>